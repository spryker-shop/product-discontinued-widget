{% extends template('widget') %}

{% define data = {
    discontinuedProduct: _widget.discontinuedProduct
} %}

{%- block isDiscontinued -%}
    {{- _widget.discontinuedProduct is not empty -}}
{%- endblock -%}

{% block body %}
    {% if data.discontinuedProduct is not empty %}
        {{ 'product_alternative_widget.product_status._discontinued' | trans }}
    {% else %}
        {{ 'customer.account.wishlist.not_available' | trans }}
    {% endif %}
{% endblock %}
